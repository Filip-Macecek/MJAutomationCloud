@page "/Account/ForgotPassword"
@attribute [AllowAnonymous]
@using MJAutomationCloud.Infrastructure.Services
@using Microsoft.AspNetCore.Identity
@using MJAutomationCloud.Infrastructure.Entities

@inject PasswordResetService PasswordResetService
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation

<PageTitle>Forgot Password - MJAutomationCloud</PageTitle>

<div class="forgot-password-container">
    <div class="forgot-password-card">
        <div class="forgot-password-header">
            <h2>Password Recovery</h2>
            <p class="text-muted">Enter your email address to receive password reset instructions</p>
        </div>

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success" role="alert">
                <i class="bi bi-check-circle-fill"></i>
                @successMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                @errorMessage
            </div>
        }

        @if (!requestSent)
        {
            <EditForm Model="forgotPasswordRequest" OnValidSubmit="HandleForgotPasswordSubmit" FormName="ForgotPasswordForm">
                <DataAnnotationsValidator />
                
                <div class="form-group mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <InputText @bind-Value="forgotPasswordRequest.Email" 
                               class="form-control" 
                               id="email" 
                               placeholder="Enter your email address"
                               autocomplete="username" />
                    <ValidationMessage For="() => forgotPasswordRequest.Email" class="text-danger" />
                    <div class="form-text">
                        We'll send password reset instructions to this email address.
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Sending...</span>
                        }
                        else
                        {
                            <i class="bi bi-envelope me-2"></i>
                            <span>Send Reset Instructions</span>
                        }
                    </button>
                    
                    <a href="/Account/Login" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>
                        Back to Login
                    </a>
                </div>
            </EditForm>
        }
        else
        {
            <div class="text-center">
                <div class="success-icon mb-4">
                    <i class="bi bi-envelope-check-fill text-success" style="font-size: 4rem;"></i>
                </div>
                
                <h4 class="mb-3">Check Your Email</h4>
                <p class="text-muted mb-4">
                    If an account with that email exists, we've sent password reset instructions to:
                    <br><strong>@forgotPasswordRequest.Email</strong>
                </p>
                
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Didn't receive the email?</strong>
                    <ul class="mt-2 mb-0 text-start">
                        <li>Check your spam/junk folder</li>
                        <li>Make sure the email address is correct</li>
                        <li>Wait a few minutes for delivery</li>
                    </ul>
                </div>
                
                <div class="d-grid gap-2 mt-4">
                    <button type="button" class="btn btn-outline-primary" @onclick="SendAnother">
                        <i class="bi bi-arrow-clockwise me-2"></i>
                        Send Another Email
                    </button>
                    
                    <a href="/Account/Login" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>
                        Back to Login
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .forgot-password-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem;
    }

    .forgot-password-card {
        background: white;
        border-radius: 1rem;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        padding: 3rem;
        width: 100%;
        max-width: 450px;
    }

    .forgot-password-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .forgot-password-header h2 {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        font-weight: 600;
        padding: 0.75rem;
    }

    .btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .alert {
        border: none;
        border-radius: 0.5rem;
    }

    .alert-success {
        background-color: #f0fdf4;
        color: #166534;
    }

    .alert-danger {
        background-color: #fef2f2;
        color: #dc2626;
    }

    .alert-info {
        background-color: #eff6ff;
        color: #1e40af;
    }

    .success-icon {
        animation: fadeInScale 0.6s ease-out;
    }

    @@keyframes fadeInScale {
        0% {
            opacity: 0;
            transform: scale(0.8);
        }
        100% {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@media (max-width: 576px) {
        .forgot-password-container {
            padding: 1rem;
        }
        
        .forgot-password-card {
            padding: 2rem;
        }
    }
</style>

@code {
    private ForgotPasswordRequest forgotPasswordRequest = new();
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isLoading = false;
    private bool requestSent = false;

    private async Task HandleForgotPasswordSubmit()
    {
        if (isLoading) return;

        isLoading = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            // Find user by email
            var user = await UserManager.FindByEmailAsync(forgotPasswordRequest.Email);
            
            if (user != null && user.IsActive)
            {
                // Generate password reset token
                var resetToken = await PasswordResetService.GeneratePasswordResetTokenAsync(user.Id);
                
                // In a real application, you would send an email here
                // For now, we'll just log the token (remove this in production)
                successMessage = $"Password reset instructions have been sent to {forgotPasswordRequest.Email}";
                
                // TODO: Implement email service
                // await EmailService.SendPasswordResetEmailAsync(user.Email, resetToken.Token);
            }
            else
            {
                // For security, we don't reveal whether the email exists or not
                successMessage = $"If an account with {forgotPasswordRequest.Email} exists, password reset instructions have been sent.";
            }

            requestSent = true;
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while processing your request. Please try again.";
            // Log the exception in a real application
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SendAnother()
    {
        requestSent = false;
        errorMessage = string.Empty;
        successMessage = string.Empty;
    }

    public class ForgotPasswordRequest
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email format")]
        public string Email { get; set; } = string.Empty;
    }
}
